{
    "name": "Ingress Intel Helper",
    "version": "1.0",
    "description": "Makes screenshots for intel map",
    "background": {
        "persistent": true,
        "scripts": [
            "core/main.js",
            "core/settings.js",
            "core/telegram.js",
            "core/help.module.js",
            "core/lang.module.js"
        ]
    },
    "content_scripts": [
        {
            "matches": ["https://www.ingress.com/intel*"],
            "css": ["hide_all.css"],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_icon": "camera.png",
        "default_title": "do nothing :)"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "<all_urls>"
    ],
    "manifest_version": 2
}